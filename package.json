{
  "name": "ritm_2",
  "version": "1.0.0",
  "description": "React Interactive Translations Manager",
  "main": "index.js",
  "scripts": {
    "format": "prettier --write --config .prettierrc '*.js' 'src/**/*.js'",
    "format:staged": "lint-staged",
    "build": "babel src --out-dir dist",
    "start": "node dist/index.js"
  },
  "author": "Gertjan Reynaert",
  "license": "MIT",
  "dependencies": {
    "@babel/polyfill": "7.4.4",
    "@babel/preset-react": "7.0.0",
    "js-yaml": "3.13.1",
    "neo-blessed": "0.2.0",
    "react": "16.8.6",
    "react-blessed": "0.6.0"
  },
  "devDependencies": {
    "@babel/cli": "7.4.4",
    "@babel/core": "7.4.4",
    "@babel/preset-env": "7.4.4",
    "lint-staged": "8.1.7",
    "pre-commit": "1.2.2",
    "prettier": "1.17.1"
  },
  "babel": {
    "presets": [
      "@babel/preset-react",
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "6.10"
          }
        }
      ]
    ]
  },
  "pre-commit": "format:staged",
  "lint-staged": {
    "*.js": [
      "prettier --write --config .prettierrc",
      "git add"
    ]
  }
}
