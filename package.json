{
  "version": "0.0.4",
  "license": "MIT",
  "name": "ritm",
  "description": "React Interactive Translations Manager",
  "author": "Gertjan Reynaert",
  "repository": {
    "type": "git",
    "url": "https://github.com/GertjanReynaert/RITM.git"
  },
  "homepage": "https://github.com/GertjanReynaert/RITM#readme",
  "files":["dist"],
  "keywords": [
    "intl",
    "translations",
    "manager",
    "management",
    "managing",
    "i18n",
    "json",
    "yaml",
    "yml"
  ],
  "main": "dist/index.js",
  "scripts": {
    "format": "prettier --write --config .prettierrc '*.js' 'src/**/*.js' '*.ts' 'src/**/*.ts'",
    "format:staged": "lint-staged",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check -- --watch",
    "build": "tsc"
  },
  "dependencies": {
    "js-yaml": "3.13.1"
  },
  "devDependencies": {
    "@types/js-yaml": "3.12.1",
    "@types/node": "12.0.12",
    "lint-staged": "10.5.3",
    "pre-commit": "1.2.2",
    "prettier": "1.18.2",
    "typescript": "3.5.2"
  },
  "pre-commit": "format:staged",
  "lint-staged": {
    "*.{ts,tsx,js,md}": [
      "prettier --write --config .prettierrc",
      "git add"
    ]
  }
}
